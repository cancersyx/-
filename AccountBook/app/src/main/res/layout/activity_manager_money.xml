<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--第一层书架-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_left" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bookshelf_layer_center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_book_1"
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_book_2"
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_right" />

            </LinearLayout>

            <!--第二层书架-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_left" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bookshelf_layer_center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_right" />

            </LinearLayout>

            <!--第三层书架-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_left" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bookshelf_layer_center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="35dp"
                        android:background="@mipmap/ic_launcher"
                        android:text="消费者权限保护"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bookshelf_layer_right" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>